{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./packages"
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx", "mock/**/*.ts"],
  "exclude": ["node_modules"]
}
